<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/card_view_bg"
    android:backgroundTint="@color/alcaparra"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/txt_icone"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:background="@drawable/circulo"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="24dp"
            tools:text="P" />

        <TextView
            android:id="@+id/txt_nome_planta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txt_icone"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@id/txt_icone"
            android:layout_toRightOf="@id/txt_icone"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:text="Plantinha Filomena" />

        <ImageView
            android:id="@+id/img_nivel_agua_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/txt_nome_planta"
            android:layout_alignStart="@id/txt_nome_planta"
            android:layout_alignLeft="@id/txt_nome_planta"
            android:src="@drawable/water_outline"
            app:tint="@color/floresta_umida_variante" />

        <ImageView
            android:id="@+id/img_nivel_agua_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@id/img_nivel_agua_1"
            android:layout_toEndOf="@id/img_nivel_agua_1"
            android:layout_toRightOf="@id/img_nivel_agua_1"
            android:src="@drawable/water_outline"
            app:tint="@color/palmeira" />

        <ImageView
            android:id="@+id/img_nivel_agua_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@id/img_nivel_agua_2"
            android:layout_toEndOf="@id/img_nivel_agua_2"
            android:layout_toRightOf="@id/img_nivel_agua_2"
            android:src="@drawable/water_outline"
            app:tint="@color/palmeira" />

        <ImageView
            android:id="@+id/img_nivel_agua_4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignTop="@id/img_nivel_agua_3"
            android:layout_toEndOf="@id/img_nivel_agua_3"
            android:layout_toRightOf="@id/img_nivel_agua_3"
            android:src="@drawable/water_outline"
            app:tint="@color/palmeira" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>